<resources>

    <style name="InterMine.Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/im_green</item>
        <item name="colorPrimaryDark">@color/im_green_dark</item>
        <item name="colorAccent">@color/im_green</item>
        <item name="colorControlHighlight">@color/im_green_transparent</item>
        <item name="actionModeBackground">@color/im_green</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>

    <style name="FabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/spacing_large</item>
        <item name="android:src">@drawable/ic_add_white_24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
    </style>

    <style name="ColoredButton" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/im_green</item>
        <item name="pressedTranslationZ">12dp</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Font styles -->

    <style name="InterMine.Theme.Text">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="InterMine.Theme.Text.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InterMine.Theme.Text.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="InterMine.Theme.Text.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InterMine.Theme.Text.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InterMine.Theme.Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InterMine.Theme.Text.Italic">
        <item name="android:textStyle">italic</item>
    </style>
</resources>
