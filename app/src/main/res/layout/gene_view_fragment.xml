<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/standard_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin">

        <TextView
            android:id="@+id/standard_name_value"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/gene_standard_name"
            android:padding="10dp"
            style="@style/Base.TextAppearance.AppCompat.Title"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_below="@id/standard_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/systematic_name_title"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:background="@color/im_green"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_margin="2dp"

                    android:text="@string/gene_systematic_name"/>

                <TextView
                    android:id="@+id/secondary_id_title"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/white"
                    android:background="@color/im_green"
                    android:layout_width="match_parent"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:text="@string/gene_secondary_id"/>

                <TextView
                    android:id="@+id/organism_name_title"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:background="@color/im_green"
                    android:text="@string/gene_organism_name"/>

                <TextView
                    android:id="@+id/organism_short_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:background="@color/im_green"
                    android:layout_margin="2dp"
                    android:text="@string/gene_organism_short_name"/>

                <TextView
                    android:id="@+id/name_description_title"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:background="@color/im_green"
                    android:text="@string/gene_name_description"/>

                <TextView
                    android:id="@+id/chromosomal_location_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:background="@color/im_green"
                    android:layout_margin="2dp"
                    android:text="@string/gene_chromosomal_location"/>

                <TextView
                    android:id="@+id/ontology_term_title"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:layout_margin="2dp"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:background="@color/im_green"
                    android:text="@string/gene_ontology_term"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/systematic_name_value"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/secondary_id_value"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/organism_name_value"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/organism_short_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_margin="2dp"
                    android:padding="5dp"/>

                <TextView
                    android:id="@+id/name_description_value"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/chromosomal_location_value"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="2dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/ontology_term_value"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_margin="2dp"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>