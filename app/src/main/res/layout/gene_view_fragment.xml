<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              tools:context="org.intermine.fragment.GeneViewFragment"
              android:paddingLeft="5dp"
              android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/standard_name_title"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:background="@color/dark_green"
            android:text="@string/gene_standard_name"/>

        <TextView
            android:id="@+id/systematic_name_title"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:background="@color/dark_green"
            android:layout_margin="2dp"

            android:text="@string/gene_systematic_name"/>

        <TextView
            android:id="@+id/secondary_id_title"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:background="@color/dark_green"
            android:layout_width="match_parent"
            android:text="@string/gene_secondary_id"/>

        <TextView
            android:id="@+id/organism_name_title"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@color/dark_green"
            android:text="@string/gene_organism_name"/>

        <TextView
            android:id="@+id/organism_short_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@color/dark_green"
            android:layout_margin="2dp"
            android:text="@string/gene_organism_short_name"/>

        <TextView
            android:id="@+id/name_description_title"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:background="@color/dark_green"
            android:text="@string/gene_name_description"/>

        <TextView
            android:id="@+id/chromosomal_location_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@color/dark_green"
            android:layout_margin="2dp"
            android:text="@string/gene_chromosomal_location"/>

        <TextView
            android:id="@+id/ontology_term_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@color/dark_green"
            android:text="@string/gene_ontology_term"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/standard_name_value"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/systematic_name_value"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/secondary_id_value"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/organism_name_value"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/organism_short_value"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/name_description_value"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/chromosomal_location_value"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/ontology_term_value"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"/>
    </LinearLayout>
</LinearLayout>
