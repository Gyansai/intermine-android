<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:background="?android:attr/activatedBackgroundIndicator"
              android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
              android:paddingStart="?android:attr/listPreferredItemPaddingStart"
              android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
              android:paddingRight="?android:attr/listPreferredItemPaddingRight">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="@dimen/small_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/gene_name"/>

        <TextView
            android:id="@+id/organism_name_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/small_padding"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/gene_organism_name"/>

        <TextView
            android:id="@+id/primary_db_id_title"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_padding"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/gene_primary_db_id"/>

        <TextView
            android:id="@+id/symbol_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingTop="@dimen/small_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/gene_symbol"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_value"
            android:paddingTop="@dimen/small_padding"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"/>


        <TextView
            android:id="@+id/organism_name_value"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_padding"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"/>


        <TextView
            android:id="@+id/primary_db_id_value"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/small_padding"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/text_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"/>


        <TextView
            android:id="@+id/symbol_value"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:paddingTop="@dimen/small_padding"
            android:ellipsize="end"
            android:textColor="@color/text_medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <TextView
            android:id="@+id/gene_mine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:paddingRight="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding"
            android:textColor="@color/text_light"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Mine"/>
    </LinearLayout>
</LinearLayout>